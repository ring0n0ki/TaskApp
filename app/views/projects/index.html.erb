<h1>Projects</h1>

<%= link_to "New Project", new_project_path %>

<ul>
  <% @projects.each do |p| %>
  <li>
    <%= link_to p.title, project_path(p.id) %>（<%= p.tasks.unfinished.count %>/<%= p.tasks.count %>）
    <%= link_to "【Edit】", edit_project_path(p.id) %>
    <%= link_to "【Delete】", project_path(p.id), method: :delete, data: {confirm: "Are you sure?"} %>
  </li>
  <% end %>
</ul>
